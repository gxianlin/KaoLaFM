<com.ilynn.kaolafm.ui.custom.CustomSwipeToRefresh
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_banner_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/roll_text_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/anchor_head_icon"/>

            <com.ilynn.kaolafm.ui.custom.ScrollTextView
                android:id="@+id/roll_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:scrollTextSize="16sp"
                app:scrollTitleTextColor="@color/head_bg"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/page_bg"/>
    </LinearLayout>
</com.ilynn.kaolafm.ui.custom.CustomSwipeToRefresh>


